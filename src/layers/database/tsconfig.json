{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "nodejs",
    "rootDir": "nodejs",
    "composite": true
  },
  "include": ["nodejs/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
